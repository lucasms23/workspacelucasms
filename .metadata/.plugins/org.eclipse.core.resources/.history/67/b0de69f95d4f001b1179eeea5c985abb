package variaveis;

public class TipoString {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String email = "lucAs@GmAil.com";
		System.out.println("Original: " + email);
		System.out.println("Maisculo: " + email.toUpperCase());
		System.out.println("Minusculo: " + email.toLowerCase());
		System.out.println("Qtde Caracteres: "+ email.length());
		System.out.println("Tem arroba? "+ email.contains("@"));
		System.out.println("Posição do arroba: "+ email.indexOf("@"));
		System.out.println("Posição do 2 ao 5: "+ email.substring(1,5));
		System.out.println("Usuario: "+ email.substring(0,email.indexOf("@")));
	}

}
