package repeticao;

import javax.swing.JOptionPane;

public class DesafioDo {

	public static void main(String[] args) {
		
		int jogador1 = Integer.parseInt(JOptionPane.showInputDialog("Jogador 1 - Digite um numero: "));
		int jogador2 = 0;
		do {
		jogador2 = Integer.parseInt(JOptionPane.showInputDialog("Jogador 2 - Tente acertar o numero do Jogador 1: "));
		if (jogador2 > jogador1) {
			JOptionPane.showMessageDialog(null, "DICA: Jogador 2, o número é maior");
		}else JOptionPane.showMessageDialog(null, "DICA: Jogador 2, o número é menor");
		}while (jogador1 != jogador2);
		JOptionPane.showMessageDialog(null, "Parabens Jogador 2, você acertou!");
	}

}
